# Backend Environment Variables
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL via Docker)
DATABASE_URL=postgresql+asyncpg://fabio2_user:fabio2_pass@localhost:5432/fabio2

# Redis (via Docker)
REDIS_URL=redis://localhost:6379/0

# Security (change in production!)
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars

# WhatsApp (Evolution API via Docker)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=dev_key_change_me

# Storage
STORAGE_MODE=local
STORAGE_LOCAL_PATH=./storage

# Frontend base URL (OAuth redirects)
FRONTEND_BASE_URL=http://localhost:3000

# Google Calendar (OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/google-calendar/callback
GOOGLE_CALENDAR_DEFAULT_ID=primary
GOOGLE_CALENDAR_SCOPE=https://www.googleapis.com/auth/calendar
GOOGLE_CALENDAR_SYNC_ENABLED=true

# MiniMax TTS (VIVA voice)
MINIMAX_API_KEY=
MINIMAX_GROUP_ID=
MINIMAX_BASE_URL=https://api.minimax.io
MINIMAX_TTS_MODEL=speech-2.8-hd
MINIMAX_TTS_VOICE_ID=Portuguese_LovelyLady
MINIMAX_TTS_SPEED=1.0
MINIMAX_TTS_PITCH=2.0
MINIMAX_TTS_VOLUME=3.64
MINIMAX_TTS_FORMAT=mp3
MINIMAX_TTS_SAMPLE_RATE=32000
MINIMAX_TTS_BITRATE=128000
MINIMAX_TTS_CHANNEL=1
