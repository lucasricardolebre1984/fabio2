# ====================================================================
# BACKEND (.env na pasta backend/)
# ====================================================================
ENVIRONMENT=development
DEBUG=true

# Banco de dados (PostgreSQL via Docker)
DATABASE_URL=postgresql+asyncpg://fabio2_user:fabio2_pass@localhost:5432/fabio2

# Redis (via Docker)
REDIS_URL=redis://localhost:6379/0

# Segurança (mude em produção!)
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars

# WhatsApp (Evolution API via Docker)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=dev_key_change_me

# Storage
STORAGE_MODE=local
STORAGE_LOCAL_PATH=./storage

# ====================================================================
# Z.AI GLM-Image API (Geração de Imagens)
# ====================================================================
ZAI_API_KEY=sua_api_key_aqui
ZAI_MODEL=glm-image

# Custo por imagem (USD)
CUSTO_POR_IMAGEM_USD=0.015
TAXA_CAMBIO_BRL=5.0

# ====================================================================
# FRONTEND (.env.local na pasta frontend/)
# ====================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=FC Soluções Financeiras
NEXT_PUBLIC_APP_URL=http://localhost:3000
